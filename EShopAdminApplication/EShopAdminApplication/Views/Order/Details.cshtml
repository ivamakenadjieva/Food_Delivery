@{
}

@model EShopAdminApplication.Models.Order

<div class="container">
    <div>
        <p>Order for @Model.Customer.FirstName @Model.Customer.LastName </p>
       
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Item Name</th>
                <th>Item Description</th>
                <th>Restaurant Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ItemsInOrder.Count(); i++)
            {
                var item = Model.ItemsInOrder.ElementAt(i).Item;
                <tr>
                    <td>@(i + 1)</td>
                    <td>@item.ItemName</td>
                    <td>@item.ItemDescription</td>
                    <td>@item.Restaurant.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
