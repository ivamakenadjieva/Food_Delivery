@model List<EShop.Domain.Domain.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Items</h1>

<div class="container">
    <div class="m-3">
        <a asp-controller="Items" asp-action="Create" class="btn btn-success">Create new Item for Restaurant</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Item Name</th>
               
                <th>Item Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@item.ItemName</td>
                    
                    <td>@item.ItemDescription</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="Items" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-warning">Add to Cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


